<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/core_theme_color</item>
        <item name="colorPrimaryDark">@color/core_theme_color_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CoreSplashTheme" parent="AppTheme">
        <item name="colorPrimary">@color/core_transparent</item>
        <item name="colorPrimaryDark">@color/core_transparent</item>
        <item name="android:windowBackground">@color/core_transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
    </style>
</resources>